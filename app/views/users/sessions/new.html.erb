<h1 class="text-xl text-lime-300 font-bold mb-[16px]">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div
    class="flex flex-col space-y-[16px]"
  >
    <div>
      <%= f.label :email,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your email address"
      %>
    </div>

    <div>
      <%= f.label :password,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <%= f.password_field :password, autocomplete: "current-password",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your password"
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div
        class="text-center"
      >
        <%= f.check_box :remember_me
        %>
        <%= f.label :remember_me
        %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in",
        class: "h-8 w-full px-[8px] text-lg text-stone-300 bg-indigo-500 rounded-md hover:bg-indigo-600 focus:bg-indigo-700 hover:cursor-pointer"
      %>
    </div>
  </div>
<% end %>

<div
  class="flex flex-col justify-center items-center"
>
  <%= render "devise/shared/links" %>
</div>
