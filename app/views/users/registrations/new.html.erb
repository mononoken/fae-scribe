<h1 class="text-xl text-lime-300 font-bold mb-[16px]">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div
    class="flex flex-col space-y-[16px]"
  >
    <%= render "users/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your email address"
      %>
    </div>

    <div>
      <%= f.label :username,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your username"
      %>
    </div>

    <div>
      <%= f.label :password,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <% if @minimum_password_length %>
      <em
        class="text-sm text-indigo-400"
      >
        (<%= @minimum_password_length %> characters minimum)
      </em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your password"
      %>
    </div>

    <div>
      <%= f.label :password_confirmation,
        class: "block text-sm text-indigo-400 font-bold"
      %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
        class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
        placeholder: "Your password"
      %>
    </div>

    <div>
      <%= f.submit "Sign up",
        class: "h-8 w-full px-[8px] text-lg text-stone-300 bg-indigo-500 rounded-md hover:bg-indigo-600 focus:bg-indigo-700 hover:cursor-pointer"
      %>
    </div>
  </div>
<% end %>

<div
  class="flex flex-col justify-center items-center"
>
  <%= render "users/shared/links" %>
</div>
