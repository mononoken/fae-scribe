<h1
  class="text-xl font-bold mb-[8px] "
>
  Edit Profile
</h1>
<%= form_with model: @user,
  class: "flex flex-col items-stretch space-y-[16px]" do |form|
%>
  <%= form.label :bio, class: "block text-sm font-bold" %>
  <%= form.text_area :bio,
    class: "w-full bg-slate-800 border-slate-700 rounded-md placeholder:italic placeholder:text-slate-600"
  %>
  <%= form.submit "Save",
    class: "h-8 w-full px-[8px] text-lg text-white rounded-md bg-mauve-700 hover:bg-mauve-600 focus:bg-mauve-800 hover:cursor-pointer"
  %>
<% end %>
