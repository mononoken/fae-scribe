<%= link_to "Back to #{@campaign.name}", campaign_path(@campaign) %>

<h1><%= @campaign.name %>'s Invitations</h1>
<%= link_to "New Invitation", new_campaign_invitation_path(@campaign),
    data: { testid: "new-invitation-link" } %>
<ul data-testid="invitations-list">
  <% @invitations.each do |invitation| %>
    <li>
      <ul>
        <li>
          To: <%= invitation.recipient.username %>
        </li>
        <li>
          From: <%= invitation.sender.username %>
        </li>
      </ul>

      <div>
        <%= button_to "Delete", invitation_path(invitation), method: :delete,
          data: {
            testid: "invitation-delete-btn"
          }
        %>
      </div>
    </li>
  <% end %>
</ul>
