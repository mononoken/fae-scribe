<%= form_with model: invitation, url: [collection, invitation],
  data: {testid: "invitation-form"} do |form|
%>
  <%= form.hidden_field :sender_id, value: current_user.id %>
  <%= form.hidden_field :collection_id, value: collection.id %>
  <%= form.label :recipient_id, "Username" %>
  <%= form.collection_select :recipient_id, User.all, :id, :username,
    {},
    data: {testid: "collection-username-select"}
  %>
  <%= form.submit "Invite",
    data: {testid: "invite-submit-btn"}
  %>
<% end %>
