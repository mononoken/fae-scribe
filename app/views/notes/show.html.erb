<%= link_to "Back to #{@journal.name}", journal_notes_path(@journal),
  class: ""
%>
<%= render @note %>

<div
  class="flex flex-col space-y-2"
>
  <%= turbo_frame_tag dom_id(@note, :new_comment),
    src: new_note_comment_path(@note)
  %>
  <%= turbo_stream_from @note, :comments %>
  <%= turbo_frame_tag dom_id(@note, :comments),
    src: note_comments_path(@note)
  %>
</div>
