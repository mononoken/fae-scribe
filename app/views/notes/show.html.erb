<%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<%= turbo_stream_from @note %>

<%= link_to "Back to #{@journal.name}", journal_notes_path(@journal),
  class: ""
%>
<%= render @note %>

<div
  class="flex flex-col space-y-2"
>
  <%= render "comments/form", {note: @note, comment: @note.comments.build } %>

  <%= turbo_frame_tag dom_id(@note, :comments),
    src: note_comments_path(@note), refresh: :morph
  %>
</div>
