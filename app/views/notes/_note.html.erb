<h4><%= link_to note.name, note_path(note), data: {testid: "note-link"} %></h4>
<p data-testid="note-body"><%= note.body %></p>
<%= link_to "Edit Note", edit_note_path(note), 
      data: {testid: "note-edit-link"} %>
<%= button_to "Delete Note", note_path(note), method: :delete,
      data: {
        turbo_confirm: "Are you sure?",
        testid: "note-delete-btn"
      } %>
