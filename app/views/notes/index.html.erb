<div>
  <h1 class="font-bold text-4xl"><%= @journal.name %> Notes</h1>

  <%= render partial: "form", locals: {note: @note, journal: @journal} %>
  <ul>
    <% @notes.each do |note| %>
      <li class="border-solid border-2">
        <div><%= note.body %></div>
        <%= link_to "Edit Note", edit_note_path(note), 
          data: {testid: "note-edit-link"} %>
        <%= button_to "Delete Note", note_path(note), method: :delete,
          data: {
            turbo_confirm: "Are you sure?",
            testid: "note-delete-btn"
          } %>
      </li>
    <% end %>
  </ul>
</div>
