<div
  class="flex justify-between"
>
  <h1
    class="text-xl text-lime-300 font-bold mb-[16px]"
  >
    <%= @journal.name %> Notes
  </h1>
  <%= link_to edit_journal_path(@journal),
    data: {testid: "journal-edit-link"},
    aria: {label: "Edit Journal"} do
  %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
    </svg>
  <% end %>
</div>

<div class="bg-slate-600 rounded-md px-4 pt-2 pb-4 mb-[16px]">
  <%= render partial: "form", locals: {note: @note, journal: @journal} %>
</div>

<%= search_form_for @q, url: journal_notes_path(@journal),
  class: "flex py-2 space-x-[8px]" do |form| %>
  <%= form.search_field :name_or_body_cont,
    class: "w-full bg-slate-800 border-slate-600 rounded-md placeholder:italic placeholder:text-slate-600",
    data: {testid: "note-search-input"}
  %>
  <%= form.button :search,
    class: "",
    data: {testid: "note-search-btn"} do
  %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
      />
    </svg>
  <% end %>
<% end %>

<ul
  class="flex flex-col justify-stetch py-2 space-y-2"
>
  <% @notes.each do |note| %>
    <li>
      <%= render partial: "note", locals: {note: note} %>
    </li>
  <% end %>
</ul>
